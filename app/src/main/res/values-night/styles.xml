<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FocusTimer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/dark_background</item>
        <item name="colorSecondary">@color/dark_primary</item>
        <item name="colorOnSecondary">@color/dark_background</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/dark_card</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TextAppearance.App.Headline5" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/dark_text_secondary</item>
    </style>
</resources> 